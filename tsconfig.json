{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "outDir": "lib",
    "lib": [
      "esnext",
      "dom"
    ],
    "resolveJsonModule": true
  },
  "include": ["src"],
}
